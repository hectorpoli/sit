{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
    Sistema de Administración de Soporte - Inicio Sesión
{% endblock %}

{% block menu %}
    {% include 'HapSoporteBundle:Menu:menu.html.twig' %}
{% endblock menu %}


{% block page %}
    {% if error %}
        <div class="alert alert-block alert-error fade in form-errors errors error">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal fos_user_registration_register" role="form">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        
        <div class="form-group">
            <label class="col-sm-2 control-label" for="username">{{ 'Usuario'|trans }}</label>
            <div class="col-sm-10">
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" style="width: 300px;" />
            </div>
        </div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label" for="password">{{ 'Contraseña'|trans }}</label>
            <div class="col-sm-10">
                <input type="password" id="password" name="_password" required="required" class="form-control" style="width: 300px;" />
            </div>
        </div>
        
        <div class="form-group">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label class="col-sm-2 control-label" for="remember_me">{{ 'Recordar'|trans }}</label>
        </div>
        
        <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'Aceptar'|trans }}" />
    </form>
{% endblock page %}
